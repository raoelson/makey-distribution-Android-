<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:id="@+id/test"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="66dp"
            android:orientation="horizontal"

            android:id="@+id/LinerLayoutResultat"
            android:visibility="gone"
            android:paddingEnd="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/imageResultat"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="5dp"
                android:src="@drawable/shutter" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:id="@+id/txtResultat"
                android:text=""
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:text="Saisir les informations"
                android:textColor="@color/status_text"
                android:textSize="12dp"
                android:textStyle="bold|italic" />
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/framelayout"
        android:layout_below="@+id/test"
        android:orientation="horizontal">
        <HorizontalScrollView
            android:id="@+id/hScroll"
            android:layout_width="fill_parent"
            android:layout_below="@+id/test"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingEnd="50dp">
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tilname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="45dp"
                        android:padding="2dp">
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/editAdresse"
                            android:textSize="@dimen/activity_vertical_margin"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:hint="Adresse"
                            android:text=""
                            android:inputType="text"
                            android:focusable="true"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tilname"
                        android:layout_gravity="center"
                        android:layout_marginLeft="45dp"
                        android:padding="2dp">
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/editVille"
                            android:textSize="@dimen/activity_vertical_margin"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:hint="Ville"
                            android:text=""
                            android:inputType="text"
                            android:focusable="true"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tilname1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="45dp"
                        android:padding="2dp">
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/editcP"
                            android:textSize="@dimen/activity_vertical_margin"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:hint="Code postal"
                            android:text=""
                            android:inputType="text"
                            android:focusable="true"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingEnd="50dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tilname"
                        android:layout_gravity="center"
                        android:layout_marginLeft="45dp"
                        android:padding="2dp">
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/editNomp"
                            android:textSize="@dimen/activity_vertical_margin"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:hint="Nom prénom"
                            android:text=""
                            android:inputType="text"
                            android:focusable="true"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="45dp"
                        android:padding="2dp">
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/editAdressec"
                            android:textSize="@dimen/activity_vertical_margin"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:hint="Complément d'adresse"
                            android:text=""
                            android:inputType="text"
                            android:focusable="true"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tilname"
                        android:layout_gravity="center"
                        android:layout_marginLeft="45dp"
                        android:padding="2dp">
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/editInfoPortage"
                            android:textSize="@dimen/activity_vertical_margin"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:hint="Info portage"
                            android:text=""
                            android:inputType="text"
                            android:focusable="true"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <ImageButton
            android:id="@+id/left_nav"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:visibility="invisible"
            android:background="#7000"
            android:layout_gravity="center_vertical|left"
            android:src="@drawable/ic_chevron_left" />

        <ImageButton
            android:id="@+id/right_nav"
            android:layout_width="48dp"
            android:visibility="invisible"
            android:background="#7000"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical|right"
            android:src="@drawable/ic_chevron_right" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/framelayout"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnListe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="retour \n    à la liste "
                android:textAlignment="center"
                android:textColor="#fff"
                android:theme="@style/AppTheme.Button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnEnregistrementAnalyser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tilname"
                android:text=" enregistrer \net analyser "
                android:textColor="#fff"
                android:theme="@style/AppTheme.Button" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_below="@+id/tilname"
                android:drawableLeft="@android:drawable/ic_menu_delete"
                android:text=" supprimer "
                android:clickable="false"
                android:textColor="#fff"
                android:id="@+id/btnSupp"
                android:theme="@style/AppTheme.Button" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>